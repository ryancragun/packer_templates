{
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/mirrors.sh",
        "scripts/update.sh",
        "scripts/vagrant.sh",
        "scripts/virtualbox.sh"
      ],
      "override": {
        "virtualbox-iso": {
          "execute_command": "echo 'packer'|sudo -S sh '{{.Path}}'"
        }
      }
    }
  ],
  "builders": [
    {
      "boot_command": [
        "text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ],
      "type": "virtualbox-iso",
      "boot_wait": "10s",
      "disk_size": 10240,
      "guest_os_type": "RedHat",
      "http_directory": "http",
      "iso_checksum": "4e66c5610fb104cb5cbc9c3632f8ef22",
      "iso_checksum_type": "md5",
      "iso_url": "http://i586.centos.org/centos/4.8/isos/i386/CentOS-4.8-i386-binDVD.iso",
      "ssh_username": "packer",
      "ssh_password": "packer",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo 'packer' | sudo -S /sbin/shutdown -h now",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "480"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "1"
        ]
      ]
    }
  ],
  "post-processors": ["vagrant"]
}
